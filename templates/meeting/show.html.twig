{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ meeting.description }}</td>
            </tr>
            <tr>
                <th>Confirmation</th>
                <td>{{ meeting.confirmation ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ meeting.lieu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ meeting.date ? meeting.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('meeting_index') }}">back to list</a>

    <a href="{{ path('meeting_edit', {'id': meeting.id}) }}">edit</a>

    {{ include('meeting/_delete_form.html.twig') }}
{% endblock %}
